{
    "name": "YunoHost seedDMS app",
    "id": "ynhseeddms",
    "packaging_format": 1,
    "description": {
        "en": "seedDMS package for YunoHost application.",
        "fr": "Package d’application seedDMS pour YunoHost."
    },
    "url": "http://www.seeddms.org",
    "license": "GPL-3.0",
    "maintainer": {
        "name": "Yann Bogdanovic",
        "email": "ianbogda+github@gmail.com"
    },
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for ynhexample",
                    "fr": "Choisissez un nom de domaine pour ynhexample"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ynhseeddms",
                    "fr": "Choisissez un chemin pour ynhseeddms"
                },
                "example": "/seeddms",
                "default": "/seeddms"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "lang",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["English", "Francais"],
                "default": "English"
            },
            {
                "name": "firstDayOfWeek",
                "ask": {
                    "en": "Choose the first Day Of Week (0=sunday, 6=saturday)",
                    "fr": "Choisissez le premier jour de la semaine (0=dimanche, 6=samedi)"
                },
                "choices": ["0", "1", "2", "3", "4", "5", "6"],
                "default": "0"
            }
        ]
    }
}